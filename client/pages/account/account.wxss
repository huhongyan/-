.account-header {
  background-color: #63b8ff;
  color: #fff;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  overflow: hidden
}
.account-header-bg{
  position: absolute;
  display: block;
  height: 100%;
  width: 100%

}
.userinfo {
  position: relative;
  margin: 20rpx auto;
  text-align: center;
}

.userinfo-avatar {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.account-number {
  display: inline-block;
  vertical-align: middle;
  text-align: left;
}

.account-number .userinfo-nickname {
  margin-bottom: 30rpx;
}

.btn-userinfo {
  opacity: 0;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.account-tab {
  display: flex;
  margin-bottom: 20rpx;
}

.account-tab .tab-item {
  flex: 1;
  line-height: 48rpx;
  padding: 20rpx 10rpx 20rpx 84rpx;
  background-color: #fff;
  background-position:  10rpx center;
  background-size: 64rpx;
  box-sizing: border-box;
}

.account-tab .tab-item +.tab-item {
  margin-left: 1rpx;
}
.add-account::after{
border: none;
}
.add-account {
  width: 128rpx;
  margin: 20rpx auto;
  background-position: top;
  background-size: 128rpx 128rpx;
  padding-top: 118rpx;
  text-align: center;
  line-height: 40rpx;
  vertical-align: bottom;
}