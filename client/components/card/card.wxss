.c-card {
  height: 100%;
  width: 100%;
  position: relative;
  border-radius: 20rpx;
  box-shadow: 0 1rpx 2rpx 2rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.card-bg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #63b8ff no-repeat center;
  background-size: cover;
  filter: opacity(50%);
  /* filter: blur(8rpx); */
}

.card-cnt {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.15);
  display: flex;
  flex-direction: column;
}

.cnt-header {
  display: flex;
  align-items: flex-end;
  padding: 20rpx;
}

.card-title {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 40rpx;
}

.card-desc {
  flex: 1;
  padding: 20rpx;
  overflow: hidden;
}
@import "../../app.wxss";
.form-switch{
  margin: 20rpx auto
}
.card-btns {
  height: 80rpx;
  margin-top: 22rpx;
  background-color: rgba(255, 255, 255, 0.5);
  display: flex;
}

.card-btns .btn-item {
  flex: 1;
  border-radius: 0;
  font-size: 32rpx;
  background-color: transparent;
}

.form-card {
  flex: 1;
  padding: 20rpx 0;
}

.form-card input {
  border-top: 1rpx solid rgba(0, 0, 0, 0.15);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.15);
    background-color: rgba(255, 255, 255, 0.5);
  padding: 0 20rpx;
  height: 84rpx;
  line-height: 84rpx;
}

.card-btns button::after {
  border-radius: 0;
  border: none;
}

.card-btns .btn-blue {
  background-color: #1296db;
  color: #fff;
}

.icon-del{
  width: 200rpx;
  border-left: 1rpx solid rgba(0, 0, 0, 0.15);
 border-radius: 0;
 background-size: 48rpx;
 background-position: center;
}